# Paths
export PATH=$HOME/.local/bin:/usr/local/bin:$PATH
export PATH=$HOME/scripts:$PATH

# XDG
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DOWNLOAD_DIR="$HOME/Downloads"
export XDG_DOCUMENTS_DIR="$HOME/Documents"
export XDG_MUSIC_DIR="$HOME/Music"
export XDG_PICTURES_DIR="$HOME/Pictures"
export XDG_VIDEOS_DIR="$HOME/Videos"

# Variables to have less unneeded dotfiles on home
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
export LESSHISTFILE="$XDG_CACHE_HOME/less_history"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
export NODE_REPL_HISTORY="$XDG_DATA_HOME/node_repl_history"
export PYTHONSTARTUP="/etc/python/pythonrc"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export WINEPREFIX="$XDG_DATA_HOME/wine"
export MYSQL_HISTFILE="$XDG_DATA_HOME/mysql_history"
export PARALLEL_HOME="$XDG_CONFIG_HOME/parallel"
export XCURSOR_PATH="/usr/share/icons:$XDG_DATA_HOME/icons"

# Other variables
export EDITOR=nvim
export VISUAL=nvim
export MANPAGER='nvim +Man!'
export MANGOHUD=1
export QT_QPA_PLATFORMTHEME=gtk2

# Variables needed to work with flutter
export PATH=$HOME/.local/share/flutter/bin:$PATH
export _JAVA_AWT_WM_NONREPARENTING=1
export CHROME_EXECUTABLE=/usr/bin/google-chrome-stable
export ANDROID_HOME="$XDG_DATA_HOME/android-sdk"
export GRADLE_USER_HOME="$XDG_DATA_HOME/gradle"
export CXX="clang++"

# playerctl
export LD_LIBRARY_PATH="$DESTDIR/usr/local/lib/:$LD_LIBRARY_PATH"
export GI_TYPELIB_PATH="$DESTDIR/usr/local/lib/:$GI_TYPELIB_PATH"

export LIBTORCH="$XDG_DATA_HOME/libtorch"
export LD_LIBRARY_PATH=${LIBTORCH}/lib:$LD_LIBRARY_PATH
