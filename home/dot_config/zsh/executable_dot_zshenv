# Paths
export PATH=$HOME/.local/bin:/usr/local/bin:$PATH
export PATH=$HOME/.local/share/spicetify:$PATH
export PATH=$HOME/scripts:$PATH

# XDG
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_DOWNLOAD_DIR="$HOME/Downloads"
export XDG_DOCUMENTS_DIR="$HOME/Documents"
export XDG_MUSIC_DIR="$HOME/Music"
export XDG_PICTURES_DIR="$HOME/Pictures"
export XDG_VIDEOS_DIR="$HOME/Videos"

# Variables to have less dotfiles on home
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export NODE_REPL_HISTORY="$XDG_DATA_HOME/node_repl_history"
export WINEPREFIX="$XDG_DATA_HOME/wine"
export MYSQL_HISTFILE="$XDG_DATA_HOME/mysql_history"
export XCURSOR_PATH="/usr/share/icons:$XDG_DATA_HOME/icons"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
export NPM_CONFIG_INIT_MODULE="$XDG_CONFIG_HOME/npm/config/npm-init.js"
export NPM_CONFIG_CACHE="$XDG_CACHE_HOME/npm"
export NPM_CONFIG_TMP="$XDG_RUNTIME_DIR/npm"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export DOTNET_CLI_HOME="$XDG_DATA_HOME/dotnet"
export PARALLEL_HOME="$XDG_CONFIG_HOME/parallel"
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME/java"
export LESSHISTFILE="$XDG_CACHE_HOME/less_history"

# Other variables
export EDITOR=nvim
export VISUAL=nvim
export MANPAGER='nvim +Man!'
export MANGOHUD=1
export QT_QPA_PLATFORMTHEME=gtk2
export HDD="$HOME/.local/hdd"

## Docker
export DCFG="$XDG_CONFIG_HOME/docker"
export TZ="America/Sao_Paulo"
export PUID=$(id -u)
export PGID=$(id -g)

## Theming
export GTK_THEME="Kanagawa-B-LB"
export XCURSOR_THEME="cz-Hickson-Black"
export XCURSOR_SIZE=24

# Variables needed to work with flutter
export _JAVA_AWT_WM_NONREPARENTING=1
export CHROME_EXECUTABLE="/usr/bin/chromium"
export ANDROID_HOME="$XDG_DATA_HOME/Android"
export ANDROID_USER_HOME="$XDG_DATA_HOME/android"
export GRADLE_USER_HOME="$XDG_DATA_HOME/gradle"
export CXX="clang++"

# Optimization Flags
CFLAGS="-march=native -O2 -pipe"
CXXFLAGS="-march=native -O2 -pipe"
RUSTFLAGS="-C opt-level=2 -C target-cpu=native"

# playerctl
export LD_LIBRARY_PATH="$DESTDIR/usr/local/lib/:$LD_LIBRARY_PATH"
export GI_TYPELIB_PATH="$DESTDIR/usr/local/lib/:$GI_TYPELIB_PATH"

# libtorch
export LIBTORCH="$XDG_DATA_HOME/libtorch"
export LD_LIBRARY_PATH="${LIBTORCH}/lib:$LD_LIBRARY_PATH"
[[ -f "$XDG_DATA_HOME/cargo/env" ]] && . "$XDG_DATA_HOME/cargo/env"

# vim:ft=zsh
